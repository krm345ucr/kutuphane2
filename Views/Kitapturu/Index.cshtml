@model List<Kitapturu>



@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}


<div class="container">
	<div class="row pt-3 pb-4">
		<div>
			<h1>
				kitap türleri
			</h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					kitap türü
				</th>
				<th>

				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var Kitapturu in Model)
			{
			
		
			<tr>
				<td>
					@Kitapturu.Id
				</td>
				<td>
					@Kitapturu.Ad
				</td>

				<td>
						<a asp-controller="Kitapturu" asp-action="Guncelle" asp-route-id="@Kitapturu.Id" type="button" class="btn btn-primary btn-lg" style="width:250px">güncelle</a>
				</td>
				<td>
						<a asp-controller="Kitapturu" asp-action="Sil" asp-route-id="@Kitapturu.Id" type="button" class="btn btn-danger btn-lg" style="width:250px">sil</a>
				</td>
				
			</tr>

			}
		</tbody>

	</table>
	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Kitapturu" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
				yeni kitap türü oluştur

			</a>
		</div>
	</div>




</div>